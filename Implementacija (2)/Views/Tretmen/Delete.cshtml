@model Implementacija.Models.Tretman

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

<h3>Da li ste sigurni da želite izbrisati ovaj tretman?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.naziv)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.naziv)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cijena)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cijena)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.kategorijaTretmana)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kategorijaTretmana)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.opisTretmana)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.opisTretmana)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Nazad na početnu</a>
    </form>
</div>
</body>
</html>
