@model IEnumerable<Implementacija.Models.RezervacijaDB>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <img src="~/img/nnnnnnnnnnnnnnnn.png" alt="Smiley face" style="float:left;position:absolute; z-index:-1 ;height:320px;padding-top:10px">
    <div style="padding-left:300px ; padding-top:200px">
        <table class="table" >
            <thead>
                <tr style=" border: 1px solid black">
                    <th style=" border-right: 1px solid black ;border-bottom: 1px solid black">
                        @Html.DisplayNameFor(model => model.imeIPrezime)
                    </th>
                    <th style=" border-right: 1px solid black; border-bottom: 1px solid black">
                        @Html.DisplayNameFor(model => model.vrijemeRezervacije)
                    </th>

                    <th style=" border-right: 1px solid black ;border-bottom: 1px solid black">
                        @Html.DisplayNameFor(model => model.odabraniTretman)
                    </th>
                    <th style="border-right: 1px solid black ;border-bottom: 1px solid black">
                        @Html.DisplayNameFor(model => model.tipPlacanja)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style=" border-right: 1px solid black ; padding-right:10px">
                            @Html.DisplayFor(modelItem => item.imeIPrezime)
                        </td>
                        <td style=" border-right: 1px solid black">
                            @Html.DisplayFor(modelItem => item.vrijemeRezervacije)
                        </td>

                        <td style="        border-right: 1px solid black
">
                            @Html.DisplayFor(modelItem => item.odabraniTretman)
                        </td>
                        <td style=" border-right: 1px solid black">
                            @Html.DisplayFor(modelItem => item.tipPlacanja)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Izmijeni</a> |

                            <a asp-action="Delete" asp-route-id="@item.ID">Otkaži</a>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div style="padding-left:170px">
            <button style="margin-top:40px; display: inline-block;
  padding: 15px 25px;
  font-size: 20px;
  cursor: pointer;
  text-align: center;
  text-decoration: none;
  outline: none;
  color: #fff;
  background-color: blueviolet;
  border: none;
  border-radius: 15px;
  box-shadow: 0 9px #999;" onclick="redirectOnClick()">Dodaj novu rezervaciju</button>
        </div>
    </div>
    <img src="~/img/nova.png" alt="Smiley face" style="float:right;position:absolute; z-index:-1 ;height:320px;padding-top:10px;padding-left:700px">
    <script>
        function redirectOnClick() {
            document.location = '/RezervacijaDBs/Create';
        }
    </script>


</body>
</html>
